{
  "name": "power-grid-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "docker:build": "docker build -t power-grid-builder:latest .",
    "docker:run": "docker run -d --name power-grid-builder -p 8080:80 --restart unless-stopped power-grid-builder:latest",
    "docker:stop": "docker stop power-grid-builder && docker rm power-grid-builder",
    "docker:logs": "docker logs power-grid-builder",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:install": "./install-docker.sh",
    "docker:install:windows": "powershell -ExecutionPolicy Bypass -File install-docker.ps1",
    "podman:build": "podman build -t power-grid-builder:latest .",
    "podman:run": "podman run -d --name power-grid-builder -p 8080:80 --restart unless-stopped power-grid-builder:latest",
    "podman:stop": "podman stop power-grid-builder && podman rm power-grid-builder",
    "podman:logs": "podman logs power-grid-builder",
    "podman:install": "./install-podman.sh",
    "container:install": "./install-docker.sh",
    "deploy": "./deploy.sh",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "deploy:full": "./deploy.sh",
    "deploy:docker": "./deploy.sh 2",
    "deploy:static": "./deploy.sh 3",
    "deploy:cloud": "./deploy.sh 4",
    "deploy:all": "./deploy.sh 5",
    "package": "./deploy.sh 5",
    "package:windows": "powershell -ExecutionPolicy Bypass -File deploy.ps1 -DeploymentType all"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
